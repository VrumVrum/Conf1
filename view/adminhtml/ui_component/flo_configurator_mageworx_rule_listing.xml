<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">flo_configurator_mageworx_rule_listing.flo_configurator_mageworx_rule_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New Rule</label>
            </button>
        </buttons>
        <spinner>flo_configurator_mageworx_rule_columns</spinner>
        <deps>
            <dep>flo_configurator_mageworx_rule_listing.flo_configurator_mageworx_rule_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="flo_configurator_mageworx_rule_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">rule_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="flo_configurator_mageworx_rule_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>rule_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="flo_configurator_mageworx_rule_columns">
        <column name="rule_id">
            <settings>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label translate="true">Rule Name</label>
            </settings>
        </column>
        <column name="device_ids" class="Flo\Configurator\Ui\Component\Listing\Column\DeviceLabelsReal">
            <settings>
                <label translate="true">Devices</label>
            </settings>
        </column>
        <column name="collection_ids" class="Flo\Configurator\Ui\Component\Listing\Column\CollectionLabels">
            <settings>
                <label translate="true">Collections</label>
            </settings>
        </column>
        <column name="mageworx_option_ids" class="Flo\Configurator\Ui\Component\Listing\Column\MageworxLabels">
            <settings>
                <label translate="true">Mageworx Templates</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Flo\Configurator\Ui\Component\Listing\Column\MageworxRuleActions">
            <settings>
                <indexField>rule_id</indexField>
                <label translate="true">Actions</label>
            </settings>
        </actionsColumn>
    </columns>
</listing>
