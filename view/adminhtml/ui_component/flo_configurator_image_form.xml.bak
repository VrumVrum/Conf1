<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">flo_configurator_image_form.image_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Image Mapping</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Flo\Configurator\Block\Adminhtml\Option\Edit\SaveButton"/>
            <button name="back" class="Flo\Configurator\Block\Adminhtml\Option\Edit\BackButton"/>
        </buttons>
        <namespace>flo_configurator_image_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>flo_configurator_image_form.image_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="image_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="flo_configurator/image/save"/>
        </settings>
        <dataProvider class="Flo\Configurator\Model\Image\DataProvider" name="image_form_data_source">
            <settings>
                <requestFieldName>image_id</requestFieldName>
                <primaryFieldName>image_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings><label translate="true">Mapping Configuration</label></settings>
        <field name="device_type_option_id" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Device Type</label>
                <dataScope>device_type_option_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Flo\Configurator\Model\Source\DeviceImageOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="collection_option_id" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Collection</label>
                <dataScope>collection_option_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Flo\Configurator\Model\Source\CollectionImageOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="color_option_id" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Color</label>
                <dataScope>color_option_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Flo\Configurator\Model\Source\ColorImageOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="priority" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Priority</label>
                <dataScope>priority</dataScope>
            </settings>
        </field>
        <field name="image_path" formElement="fileUploader">
            <settings>
                <label translate="true">Image File</label>
                <componentType>fileUploader</componentType>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param name="url" xsi:type="url" path="flo_configurator/image/upload"/>
                        </uploaderConfig>
                    </settings>
                </fileUploader>
            </formElements>
        </field>
    </fieldset>
</form>
