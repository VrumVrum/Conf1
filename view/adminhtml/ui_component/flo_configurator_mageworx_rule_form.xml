<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">flo_configurator_mageworx_rule_form.flo_configurator_mageworx_rule_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Rule Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Flo\Configurator\Block\Adminhtml\MageworxRule\Edit\SaveButton"/>
            <button name="back" class="Flo\Configurator\Block\Adminhtml\MageworxRule\Edit\BackButton"/>
        </buttons>
        <namespace>flo_configurator_mageworx_rule_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>flo_configurator_mageworx_rule_form.flo_configurator_mageworx_rule_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="flo_configurator_mageworx_rule_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="flo_configurator/mageworxrule/save"/>
        </settings>
        <dataProvider class="Flo\Configurator\Model\MageworxRule\DataProvider" name="flo_configurator_mageworx_rule_form_data_source">
            <settings>
                <requestFieldName>rule_id</requestFieldName>
                <primaryFieldName>rule_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>
        <field name="rule_id" formElement="hidden">
            <settings>
                <dataType>text</dataType>
            </settings>
        </field>
        <field name="name" formElement="input">
            <settings>
                <label translate="true">Rule Name</label>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="device_ids" formElement="multiselect">
            <settings>
                <label translate="true">Device Types</label>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Flo\Configurator\Model\Configurator\Source\DeviceTypes"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="collection_ids" formElement="multiselect">
            <settings>
                <label translate="true">Collections</label>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Flo\Configurator\Model\Configurator\Source\Collections"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="mageworx_option_ids" formElement="select">
            <settings>
                <label translate="true">Mageworx Template</label>
                <dataType>text</dataType>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Flo\Configurator\Model\Configurator\Source\MageworxTemplates"/>
                        <caption translate="true">-- Select Template --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
